F12
	~/bin/monitor-hotplug

super + Return
	termite

super + shift + v
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# program launcher
super + @space
	~/.config/rofi/modules/main

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

super + shift + x
	bspc rule -a 'Emacs' -o state=floating && org-capture

# program launcher
super + shift + Tab
	~/bin/rofi/app_switch

super + {grave,Tab}
	bspc {node,desktop} -f last

# program launcher
super + d
	rofi -show

# Toggle floating/fullscreen
super + {_,ctrl + }f
	bspc node -t ~{floating,fullscreen}

# focus/swap the node in the given direction
super + {_,ctrl +}{h,j,k,l}
	 /etc/dotfiles/bin/bspc/focus {_,-m }{west,south,north,east}

super + shift + {_,ctrl +}{h,j,k,l}
	/etc/dotfiles/bin/bspc/swap {_,-m }{west,south,north,east}

super + {_,shift +}{1-9,0}
	bspc {desktop -f,node -d} {1-9,10}

# sxhkd config reload
super + Escape
	pkill -USR1 -x sxhkd

XF86MonBrightnessUp
	light -A 5
XF86MonBrightnessDown
	light -U 5

{ XF86AudioRaiseVolume, super + alt + j }
	amixer -q set Master 10%+ unmute
{ XF86AudioLowerVolume, super + alt + j }
	amixer -q set Master 10%- unmute
{ XF86AudioPlay, super + alt + p }
	playerctl play-pause
{ XF86AudioNext, super + alt + l }
	playerctl next
{ XF86AudioPrev, super + alt + h }
	playerctl previous
{ XF86AudioMute, super + alt + m }
	amixer -q set Master toggle

# turn off screen
super + BackSpace
	zzz
# sleep
super + shift + BackSpace
	zzz -f

super + shift + s
	flameshot gui

