# terminal emulator
super + Return
	termite

# Paste
super + shift + v
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# program launcher
super + @space
	rofi -modi drun -show drun
	# rofi -show run

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# program launcher
super + Tab
	~/bin/rofi/app_switch

# program launcher
super + d
	rofi -show

# Toggle floating/fullscreen
super + {_,ctrl + }f
	bspc node -t ~{floating,fullscreen}

# focus/swap the node in the given direction
super + {_,ctrl +}{h,j,k,l}
	 /etc/dotfiles/bin/bspc/focus {_,-m }{west,south,north,east}

hyper_r + {_,ctrl +}{h,j,k,l}
	 /etc/dotfiles/bin/bspc/focus {_,-m }{west,south,north,east}

super + shift + {_,ctrl +}{h,j,k,l}
	/etc/dotfiles/bin/bspc/swap {_,-m }{west,south,north,east}

super + {_,shift +}{1-9,0}
	bspc {desktop -f,node -d} {1-9,10}

# sxhkd config reload
super + Escape
	pkill -USR1 -x sxhkd

XF86MonBrightnessUp
	light -A 5
XF86MonBrightnessDown
	light -U 5

XF86AudioMute
	amixer -q set Master toggle
XF86AudioLowerVolume
	amixer -q set Master 10%- unmute
XF86AudioRaiseVolume
	amixer -q set Master 10%+ unmute

# turn off screen
super + backspace
	zzz
# sleep
super + backspace
	zzz -f

super + alt + p
	playerctl play-pause
super + alt + j
	amixer -q set Master 10%- unmute
super + alt + k
	amixer -q set Master 10%+ unmute
super + alt + l
	playerctl next
super + alt + h
	playerctl previous
super + alt + m
	amixer -q set Master toggle


