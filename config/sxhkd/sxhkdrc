super + alt + Escape
	bspc quit

super + apostrophe
	bspc window -s last

# focus/swap the node in the given direction
super + {_,ctrl +}{h,j,k,l}
	~/.dotfiles/bin/bspc/focus {_,-m }{west,south,north,east}

super + shift + {_,ctrl +}{h,j,k,l}
	~/.dotfiles/bin/bspc/swap {_,-m }{west,south,north,east}

# terminal emulator
super + Return
	termite

# program launcher
super + d
	rofi -show combi

# sxhkd config reload
super + Escape
	pkill -USR1 -x sxhkd

super + a
	zsh -c rofimoji

XF86MonBrightnessUp
	light -A 5
XF86MonBrightnessDown
	light -U 5

